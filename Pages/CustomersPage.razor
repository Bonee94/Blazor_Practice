@page "/customers"
@inject CustomerService CustomerService

<h3>Customers</h3>

<a href="/customers/add" class="btn btn-primary">Add Customer</a>

@if (CustomerService.GetAll().Count == 0)
{
    <p>No customers yet.</p>
}
else
{
    <ul class="list-group mt-3">
        @foreach (var customer in CustomerService.GetAll())
        {
            <li class="list-group-item">
                <strong>@customer.Name</strong> &nbsp;
                <a href="/customers/edit/@customer.Id">Edit</a>
                <br />
                <span style="font-size: 14px;">@customer.Email | @customer.Phone</span>
                <br />
                <strong style="font-size: 14px;"><em>Service: @customer.ServiceType</em></strong>
                <p style="font-size: 12px;">@customer.Notes</p>
            </li>
        }
    </ul>
}
