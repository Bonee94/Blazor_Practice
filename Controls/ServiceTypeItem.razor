<li class="list-group-item d-flex justify-content-between align-items-center">
    @Service.Name
    <button class="btn btn-sm btn-danger" @onclick="() => OnDelete.InvokeAsync(Service.Name)">
        <i class="bi-trash"></i>
    </button>
</li>

@code {
    [Parameter] public ServiceType Service { get; set; } = default!;
    [Parameter] public EventCallback<string> OnDelete { get; set; }
}
